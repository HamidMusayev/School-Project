@model Exam

@{
    ViewData["Title"] = "Sil";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Sil</h1>

<h3>Bu qeydiyyatl silmək istədiyinizə əminsiniz?</h3>
<div>
    <h4>İmtahan</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ExamStartDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ExamStartDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ExamEndDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ExamEndDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.IsCanceled)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IsCanceled)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Sil" class="btn btn-danger" /> |
        <a asp-action="Index">Geri qayıt</a>
    </form>
</div>
