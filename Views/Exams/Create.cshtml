@model Exam

@{
    ViewData["Title"] = "Əlavə et";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Əlavə et</h1>

<h4>İmtahan</h4>
<hr/>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ExamStartDate" class="control-label"></label>
                <input asp-for="ExamStartDate" class="form-control"/>
                <span asp-validation-for="ExamStartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ExamEndDate" class="control-label"></label>
                <input asp-for="ExamEndDate" class="form-control"/>
                <span asp-validation-for="ExamEndDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LessonId" class="control-label"></label>
                <select asp-for="LessonId" asp-items="@ViewBag.Lessons" class="form-control"></select>
                <span asp-validation-for="LessonId" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsCanceled"/> @Html.DisplayNameFor(model => model.IsCanceled)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Əlavə et" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Geri qayıt</a>
</div>